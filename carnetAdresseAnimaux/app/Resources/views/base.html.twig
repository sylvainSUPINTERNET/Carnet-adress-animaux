<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Carnet d'adresse d'animaux!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/contact/css/style.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <nav>
        <ul class="nav nav-tabs">
            {% if (is_granted('ROLE_ADMIN') or is_granted('ROLE_USER')) %}
                <li class="nav-item">
                    <a href="{{ path('index') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('fos_user_security_logout') }}">Logout</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('contact_index') }}">Voir tous les contacts</a>
                </li>
            {% else %}
                <li class="nav-item">
                    <a href="{{ path('index') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('fos_user_security_login') }}">Login</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('fos_user_registration_register') }}">Register</a>
                </li>
            {% endif %}
        </ul>
    </nav>
    <body>
        {% block body %}

        {% endblock %}
        {% block javascripts %}<script src="{{ asset('bundles/bootstrap/js/bootstrap.min.js') }}"></script>{% endblock %}
    </body>
</html>
